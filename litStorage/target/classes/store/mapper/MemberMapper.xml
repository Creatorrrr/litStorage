<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="store.mapper.MemberMapper">

	<resultMap type="Member" id="memberMap">
		<id column="id" property="id"/>      
		<result column="name" property="name"/>
		<result column="password" property="password"/>
		<result column="email" property="email"/>
	</resultMap>
	
	<sql id="selectMember">
  		SELECT id, password, name, email
		FROM Member
	</sql>	
	
	
	<insert id="insertMember" parameterType="Member">
		INSERT INTO Member(id,name,password,email)
		VALUES (#{id},#{name},#{password},#{email})
	</insert>

	<select id="selectMemberById" parameterType="string" resultMap="memberMap">
		<include refid="selectMember"/>
		WHERE id=#{id}
	</select>

	<select id="selectMembersByName" parameterType="string" resultMap="memberMap">
		<include refid="selectMember"/>
		WHERE name=#{name}
	</select>
		
	<update id="updateMember" parameterType="Member">
		UPDATE Member
		SET id=#{id}, name=#{name}, password=#{password}, email=#{email}
		WHERE id=#{id}
	</update>
	
	<delete id="deleteMember" parameterType="string">
		DELETE FROM Member
		WHERE id = #{id}
	</delete>
	
  </mapper>