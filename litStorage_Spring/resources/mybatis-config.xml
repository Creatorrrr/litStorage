<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<properties resource="dataSource.properties"></properties>
	
	<typeAliases>
		<typeAlias type="litstorage.domain.Board" alias="Board"/>
		<typeAlias type="litstorage.domain.DiscussionContent" alias="DiscussionContent"/>
		<typeAlias type="litstorage.domain.DiscussionPlace" alias="DiscussionPlace"/>
		<typeAlias type="litstorage.domain.Episode" alias="Episode"/>
		<typeAlias type="litstorage.domain.ChangeHistory" alias="ChangeHistory"/>
		<typeAlias type="litstorage.domain.InviteRequest" alias="InviteRequest"/>
		<typeAlias type="litstorage.domain.Literature" alias="Literature"/>
		<typeAlias type="litstorage.domain.LitStorage" alias="LitStorage"/>
		<typeAlias type="litstorage.domain.Member" alias="Member"/>
		<typeAlias type="litstorage.domain.MemberLitStorage" alias="MemberLitStorage"/>
		<typeAlias type="litstorage.domain.Post" alias="Post"/>
	</typeAliases>
	
	<environments default="development">
	  	<environment id="development">
	  		<transactionManager type="JDBC"/>
	  		<dataSource type="POOLED">
	  			<property name="driver" value="${driver}"/>
	  			<property name="url" value="${url}"/>
	  			<property name="username" value="${username}"/>
	  			<property name="password" value="${password}"/>
	  		</dataSource>
	  	</environment>
	</environments>
	
	<mappers>
		<mapper resource="mapper/BoardMapper.xml"/>
	 	<mapper resource="mapper/ChangeHistoryMapper.xml"/>
	 	<mapper resource="mapper/DiscussionContentMapper.xml"/>
	 	<mapper resource="mapper/DiscussionPlaceMapper.xml"/>
	 	<mapper resource="mapper/EpisodeMapper.xml"/>
	 	<mapper resource="mapper/InviteRequestMapper.xml"/>
	 	<mapper resource="mapper/LiteratureMapper.xml"/>
	 	<mapper resource="mapper/LitStorageMapper.xml"/>
	 	<mapper resource="mapper/MemberLitStorageMapper.xml"/>
	 	<mapper resource="mapper/MemberMapper.xml"/>
	 	<mapper resource="mapper/PostMapper.xml"/>
	</mappers>
</configuration>