<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="litstorage.store.mapper.MemberMapper">

	<resultMap type="Member" id="memberMap">
		<id column="id" property="id"/>      
		<result column="name" property="name"/>
		<result column="password" property="password"/>
		<result column="email" property="email"/>
	<!-- 	<result column="isout" property="email"/> -->
	</resultMap>
	
	<sql id="selectMember">
  		SELECT id, password, name, email
		FROM Member
	</sql>	
	
	
	<insert id="insertMember" parameterType="Member">
		INSERT INTO Member(id,name,password,email)
		VALUES (#{id},#{name},#{password},#{email})
	</insert>

	<select id="selectMemberById" parameterType="string" resultMap="memberMap">
		<include refid="selectMember"/>
		WHERE id=#{id}
	</select>

	<select id="selectMembersByName" parameterType="String" resultMap="memberMap">
		<include refid="selectMember"/>
		WHERE name LIKE '%'||#{name}||'%'
	</select>
		
	<update id="updateMember" parameterType="Member">
		UPDATE Member
		SET id=#{id}, name=#{name}, password=#{password}, email=#{email}
		WHERE id=#{id}
	</update>
	
	<update id="deleteMember" parameterType="string">
		UPDATE Member SET id=#{id}, name='*DEL*', password='*DEL*', email='*DEL*' WHERE id = #{id}
	</update>
	
  </mapper>